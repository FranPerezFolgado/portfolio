<section id="skills" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Skills & Technologies</h2>
      <div class="w-24 h-1 bg-blue-600 mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        I work with a variety of technologies and tools to create robust, scalable applications.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {skillCategories.map((category) => (
        <div class="bg-gray-50 rounded-lg p-6">
          <div class="flex items-center mb-6">
            <span class="text-3xl mr-3">{category.icon}</span>
            <h3 class="text-xl font-semibold text-gray-900">{category.title}</h3>
          </div>
          
          <div class="space-y-4">
            {category.skills.map((skill) => (
              <div>
                <div class="flex justify-between mb-2">
                  <span class="text-gray-700 font-medium">{skill.name}</span>
                  <span class="text-gray-500">{skill.level}%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div 
                    class="bg-gradient-to-r from-blue-600 to-purple-600 h-2 rounded-full transition-all duration-1000"
                    style={`width: ${skill.level}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-semibold text-gray-900 mb-8">Always Learning</h3>
      <div class="flex flex-wrap justify-center gap-4">
        {["Machine Learning", "Rust", "Go", "Kubernetes", "Three.js", "WebAssembly"].map((tech) => (
          <span class="px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>